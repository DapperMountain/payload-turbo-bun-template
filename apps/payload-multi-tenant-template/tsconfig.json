{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "PayloadCMS",
  "extends": "@dappermountain/typescript-config/nextjs",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@config": ["config/index.ts"],
      "@config/*": ["config/*"],
      "@collections/*": ["src/collections/*"],
      "@payload-config": ["config/payload.ts"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.mts", "**/*.mjs", "next-env.d.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
